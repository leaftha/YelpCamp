<%- include('../partials/header'); %>
<div class="container">
  <div class="container">
    <h1 style="text-align: center">Edit to</h1>
    <div style="width: 30%; margin: 25px auto">
      <form
        action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT "
        method="POST"
      >
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="comment[text]"
            value="<%= comment.text %> "
          />
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block">Submit</button>
        </div>
        <a href="/campgrounds">Back</a>
      </form>
    </div>
  </div>
</div>

